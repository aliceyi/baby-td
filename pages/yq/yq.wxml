<view class="container">
  <view class="td-center">
    <label class="td-pink-dark f16">孕 {{yweek}} 周 {{yday}} 天</label>
  </view>
  <view class="td-container td-black">
    <block class="grid-cell"> 
      <view>
        <label class="f16">选择末次月经开始时间</label>
      </view>
      <view class="section f16">
        <picker mode="date" value="{{ycq}}"  bindchange="bindDateChange">
          <view class="picker">
            {{ycq}} 
          </view>
        </picker>
      </view>
    </block>
  </view>

  <view class="td-container td-black yd_container">
    <block class="grid-cell"> 
      <view class="yq_block td-center td-pink-dark f16">
        <text class="yq-title">预产期</text>
        <view class="yq-body">{{last_ycq}} {{astro}}</view>
      </view>
    </block>
    <block class="grid-cell"> 
      <view class="yq_block td-center td-pink-dark f16">
        <text class="yq-title">距预产期</text>
        <view class="yq-body">{{last_days}} 天</view>
      </view>
    </block>
  </view>
  <view class="container">
    <view class="td-center">
      <label class="td-pink-dark f16">宝宝周历</label>
    </view>
    <view>
      <image src='{{showItem.url}}'></image>
      <view style="padding:0 25rpx">
        <text class="f16 td-black">
            {{showItem.info}}
        </text>
      </view>
    </view>
  </view>
  <view class="container f16 td-center td-pink-dark" style="padding:20rpx 0;">
    <picker bindchange="bindPickerChange" value="{{showItem.id}}" range="{{week}}">
      <view class="picker">
        查看怀孕第 {{showItem.id}} 周，宝宝的变化
      </view>
    </picker>
  </view>

</view>